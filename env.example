# =============================================================================
# Dental Practice Management System - Environment Configuration
# =============================================================================
# 
# Copy this file to .env and update the values according to your setup
# cp env.example .env
#
# IMPORTANT: Never commit your actual .env file to version control!
# Add .env to your .gitignore file
# =============================================================================

# =============================================================================
# Django Settings
# =============================================================================

# Django Secret Key (generate a new one for production!)
# You can generate a new secret key using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production

# Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated list)
# Add your domain names for production
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================

# Database Engine
# Options: django.db.backends.sqlite3, django.db.backends.postgresql, django.db.backends.mysql
DB_ENGINE=django.db.backends.sqlite3

# Database Name (for SQLite, this is the file path)
DB_NAME=db.sqlite3

# Database User (leave empty for SQLite)
DB_USER=

# Database Password (leave empty for SQLite)
DB_PASSWORD=

# Database Host (leave empty for SQLite)
DB_HOST=

# Database Port (leave empty for SQLite)
DB_PORT=

# =============================================================================
# Email Configuration (Optional - for password reset, notifications)
# =============================================================================

# Email Backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Settings (uncomment and configure for email functionality)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# File Upload Settings (Optional)
# =============================================================================

# Maximum file upload size (in bytes)
# Default: 2.5MB (2621440 bytes)
# MAX_UPLOAD_SIZE=2621440

# Allowed file types for uploads
# ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# =============================================================================
# Security Settings (Production Only)
# =============================================================================

# HTTPS Settings (set to True in production)
# SECURE_SSL_REDIRECT=False
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Session Security (set to True in production)
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================

# Log Level
# LOG_LEVEL=INFO

# Log File Path
# LOG_FILE=logs/dpms.log

# =============================================================================
# Custom Settings
# =============================================================================

# Application Name
APP_NAME=Dental Practice Management System

# Time Zone
TIME_ZONE=UTC

# Language Code
LANGUAGE_CODE=en-us

# =============================================================================
# Development Settings (Remove in Production)
# =============================================================================

# Development Server Port (optional)
# DEV_SERVER_PORT=8000

# Auto-reload on file changes (development only)
# AUTO_RELOAD=True
